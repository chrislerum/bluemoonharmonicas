- provide :title, 'Register'

.block.clear
  = form_for @user, :html => {class:'dark'} do |f|
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :email
      = f.text_field :email
    .field
      = f.label :password
      = f.password_field :password
    .field
      = f.label :password_confirmation
      = f.password_field :password_confirmation
    .field
      = f.button 'Register', class: 'submit'
